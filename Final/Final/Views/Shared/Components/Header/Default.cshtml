@using Service.Service.Interfaces
@using Service.ViewModels.Basket
@inject IAccountService _accountService
@model BasketUIVM

<header>
    <nav class="navbar">
        <div class="nav-left">
            <div class="red-box">
                <img src="~/assets/img/logo-white (2).svg" alt="">
            </div>

            <div class="sidebar-icon">
                <i class="fas fa-bars"></i>
            </div>
            <div id="sidebar-dropdown" class="sidebar-dropdown">
                <ul>
                    <li>
                        <a href="Wine.html">
                            <i class="fa-solid fa-wine-glass"></i> Wine
                        </a>
                    </li>

                    <li>
                        <a href="Beer.html">
                            <i class="fa-solid fa-beer-mug-empty"></i> Beer
                        </a>
                    </li>

                    <li>
                        <a href="Whiskey.html">
                            <i class="fa-solid fa-whiskey-glass"></i> Whiskey
                        </a>
                    </li>

                    <li>
                        <a href="Cogac.html">
                            <i class="fa-solid fa-whiskey-glass"></i> Cognac
                        </a>
                    </li>

                    <li>
                        <a href="Cocktail.html">
                            <i class="fa-solid fa-martini-glass"></i> Cocktail
                        </a>
                    </li>

                    <li>
                        <a href="Tequila.html">
                            <i class="fa-solid fa-bottle-droplet"></i> Tequila
                        </a>
                    </li>
                </ul>
            </div>


            <div class="nav-links">
                <a asp-controller="home" asp-action="index">Home</a>
                <a asp-controller="shop" asp-action="index">Shop</a>
                <a asp-controller="blog" asp-action="index">Blog</a>
                <a asp-controller="contact" asp-action="index">Contact</a>
            </div>
        </div>

        <div class="nav-right">
            <div class="search-icon">
                <i class="fas fa-search"></i>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                var user = await _accountService.GetUserAsync(@User.Identity.Name);
                if (user == null)
                {
                    <div class="auth">
                        <a asp-controller="account" asp-action="login">Login</a> / <a asp-controller="account" asp-action="register">Register</a>
                    </div>
                }
                else
                {
                    <div class="user-dropdown">
                        <button class="user-btn" id="userDropdownBtn">
                            @user.Name @user.Surname
                            <i class="fa-solid fa-chevron-down"></i>
                        </button>

                        <div class="user-menu" id="userDropdownMenu">
                            <a href="/Profile">Profile</a>
                            <a href="/Settings">Settings</a>
                            <a asp-controller="account" asp-action="logout">Logout</a>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="auth">
                    <a asp-controller="account" asp-action="login">Login</a> / <a asp-controller="account" asp-action="register">Register</a>
                </div>
            }
            <div class="icons-nav">
                <a href="Wishlist.html">
                    <i class="fas fa-heart"></i>
                </a>

                <i class="fas fa-shopping-cart" id="cartIcon"></i>
                <sup id="basketCount" class="rounded-circle">@Model.TotalCount</sup>
            </div>


            <div class="cart-sidebar" id="cartSidebar">
                <div class="cart-header">
                    <h3>Shopping cart</h3>
                    <span id="closeCart" class="close-btn">CLOSE ×</span>
                </div>

                <div class="cart-body" id="basketContent">
                    @await Html.PartialAsync("_BasketSidebarPartial", Model)
                </div>
            </div>

            <div class="cart-overlay" id="cartOverlay"></div>

        </div>
    </nav>
</header>


<style>
    .user-dropdown {
        position: relative;
        display: inline-block;
    }

    .user-btn {
        background: #f5f5f5;
        border: 1px solid #ccc;
        padding: 8px 14px;
        border-radius: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .user-menu {
        position: absolute;
        right: 0;
        top: 110%;
        background: white;
        border: 1px solid #ccc;
        border-radius: 8px;
        min-width: 160px;
        display: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        z-index: 9999;
    }

        .user-menu a {
            display: block;
            padding: 8px 14px;
            text-decoration: none;
            color: black;
        }

            .user-menu a:hover {
                background: #f2f2f2;
            }

        .user-menu.show {
            display: block;
        }


    /* =========================
       CART SIDEBAR + OVERLAY
    ========================= */

    /* Overlay */
    #cartOverlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.45);
        opacity: 0;
        visibility: hidden;
        transition: 0.25s;
        z-index: 1999;
    }

        #cartOverlay.active {
            opacity: 1;
            visibility: visible;
        }

    /* Sidebar */
    #cartSidebar {
        position: fixed;
        top: 0;
        right: -420px;
        width: 420px;
        max-width: 92vw;
        height: 100vh;
        background: #fff;
        box-shadow: -10px 0 35px rgba(0,0,0,0.15);
        transition: 0.35s;
        z-index: 2000;
        display: flex;
        flex-direction: column;
    }

        /* Open state */
        #cartSidebar.active {
            right: 0;
        }

        /* Header */
        #cartSidebar .cart-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 18px 18px;
            border-bottom: 1px solid #eee;
        }

            #cartSidebar .cart-header h3 {
                margin: 0;
                font-size: 18px;
                font-weight: 700;
                letter-spacing: 0.2px;
            }

        #cartSidebar .close-btn {
            cursor: pointer;
            font-size: 13px;
            font-weight: 700;
            padding: 8px 10px;
            border-radius: 10px;
            background: #f3f4f6;
            transition: 0.2s;
            user-select: none;
        }

            #cartSidebar .close-btn:hover {
                background: #e9eaee;
            }

        /* Body */
        #cartSidebar .cart-body {
            padding: 14px 16px;
            overflow-y: auto;
            flex: 1;
        }

            /* Empty text */
            #cartSidebar .cart-body p {
                margin: 8px 0;
                font-size: 14px;
                color: #666;
            }

        /* Cart items */
        #cartSidebar .cart-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 10px;
            border: 1px solid #eee;
            border-radius: 14px;
            margin-bottom: 12px;
            background: #fff;
        }

            #cartSidebar .cart-item img {
                width: 58px;
                height: 58px;
                object-fit: cover;
                border-radius: 12px;
                border: 1px solid #f1f1f1;
            }

        /* Info area (works if you have .cart-info) */
        #cartSidebar .cart-info {
            flex: 1;
            min-width: 0;
        }

            #cartSidebar .cart-info h5 {
                margin: 0 0 6px 0;
                font-size: 14px;
                font-weight: 700;
                color: #111;
                line-height: 1.2;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            #cartSidebar .cart-info span {
                font-size: 13px;
                color: #555;
            }

        /* Remove button */
        #cartSidebar .remove-item {
            width: 34px;
            height: 34px;
            border: none;
            border-radius: 10px;
            background: #f7f7f8;
            cursor: pointer;
            transition: 0.2s;
            font-size: 16px;
            line-height: 1;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            #cartSidebar .remove-item:hover {
                background: #ef4444;
                color: #fff;
            }

        /* Footer inside partial (if you have .cart-footer) */
        #cartSidebar .cart-footer {
            margin-top: 10px;
            padding-top: 12px;
            border-top: 1px dashed #e7e7e7;
            font-size: 14px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #cartSidebar .cart-body::-webkit-scrollbar {
            width: 8px;
        }

        #cartSidebar .cart-body::-webkit-scrollbar-thumb {
            background: #d9d9de;
            border-radius: 10px;
        }

        #cartSidebar .cart-body::-webkit-scrollbar-track {
            background: transparent;
        }

</style>
