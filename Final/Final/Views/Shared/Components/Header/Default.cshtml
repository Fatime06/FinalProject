@using Service.Service.Interfaces
@inject IAccountService _accountService

<header>
    <nav class="navbar">
        <div class="nav-left">
            <div class="red-box">
                <img src="~/assets/img/logo-white (2).svg" alt="">
            </div>

            <div class="sidebar-icon">
                <i class="fas fa-bars"></i>
            </div>
            <div id="sidebar-dropdown" class="sidebar-dropdown">
                <ul>
                    <li>
                        <a href="Wine.html">
                            <i class="fa-solid fa-wine-glass"></i> Wine
                        </a>
                    </li>

                    <li>
                        <a href="Beer.html">
                            <i class="fa-solid fa-beer-mug-empty"></i> Beer
                        </a>
                    </li>

                    <li>
                        <a href="Whiskey.html">
                            <i class="fa-solid fa-whiskey-glass"></i> Whiskey
                        </a>
                    </li>

                    <li>
                        <a href="Cogac.html">
                            <i class="fa-solid fa-whiskey-glass"></i> Cognac
                        </a>
                    </li>

                    <li>
                        <a href="Cocktail.html">
                            <i class="fa-solid fa-martini-glass"></i> Cocktail
                        </a>
                    </li>

                    <li>
                        <a href="Tequila.html">
                            <i class="fa-solid fa-bottle-droplet"></i> Tequila
                        </a>
                    </li>
                </ul>
            </div>


            <div class="nav-links">
                <a asp-controller="home" asp-action="index">Home</a>
                <a asp-controller="shop" asp-action="index">Shop</a>
                <a asp-controller="blog" asp-action="index">Blog</a>
                <a asp-controller="contact" asp-action="index">Contact</a>
            </div>
        </div>

        <div class="nav-right">
            <div class="search-icon">
                <i class="fas fa-search"></i>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                var user = await _accountService.GetUserAsync(@User.Identity.Name);
                if (user == null)
                {
                    <div class="auth">
                        <a asp-controller="account" asp-action="login">Login</a> / <a asp-controller="account" asp-action="register">Register</a>
                    </div>
                }
                else
                {
                    <div class="user-dropdown">
                        <button class="user-btn" id="userDropdownBtn">
                            @user.Name @user.Surname
                            <i class="fa-solid fa-chevron-down"></i>
                        </button>

                        <div class="user-menu" id="userDropdownMenu">
                            <a href="/Profile">Profile</a>
                            <a href="/Settings">Settings</a>
                            <a asp-controller="account" asp-action="logout">Logout</a>
                        </div>
                    </div>

                }
            }
            else
            {
                <div class="auth">
                    <a asp-controller="account" asp-action="login">Login</a> / <a asp-controller="account" asp-action="register">Register</a>
                </div>
            }
            <div class="icons-nav">
                <a href="Wishlist.html">
                    <i class="fas fa-heart"></i>
                </a>

                <i class="fas fa-shopping-cart" id="cartIcon"></i>
            </div>


            <div class="cart-sidebar" id="cartSidebar">
                <div class="cart-header">
                    <h3>Shopping cart</h3>
                    <span id="closeCart" class="close-btn">CLOSE ×</span>
                </div>

                <div class="cart-body" id="cartBody">
                    <p>No products in the cart.</p>
                </div>
            </div>

            <div class="cart-overlay" id="cartOverlay"></div>

        </div>
    </nav>
</header>


<style>
    .user-dropdown {
        position: relative;
        display: inline-block;
    }

    .user-btn {
        background: #f5f5f5;
        border: 1px solid #ccc;
        padding: 8px 14px;
        border-radius: 20px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .user-menu {
        position: absolute;
        right: 0;
        top: 110%;
        background: white;
        border: 1px solid #ccc;
        border-radius: 8px;
        min-width: 160px;
        display: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        z-index: 9999;
    }

        .user-menu a {
            display: block;
            padding: 8px 14px;
            text-decoration: none;
            color: black;
        }

            .user-menu a:hover {
                background: #f2f2f2;
            }

        .user-menu.show {
            display: block;
        }
</style>
