@using Service.ViewModels.Brand
@model IEnumerable<BrandVM>

@{
    int? activeBrand = ViewData["ActiveBrand"] as int?;
}

<section class="filter-section">
    <h3 class="filter-title">Filter By Brands</h3>
    <hr class="filter-line">

    <ul class="brand-list">
        @foreach (var brand in Model)
        {
            <a asp-controller="Shop"
               asp-action="Index"
               asp-route-brandId="@brand.Id">
            <li class="filter-brand @(activeBrand == brand.Id ? "active" : "")">
                @brand.Name
                <span>(@brand.Products.Count())</span>
            </li>

            </a>
        }
    </ul>

</section>

<style>
    .brand-list li span {
        color: inherit;
    }

    .brand-list .filter-brand.active {
        color: #b02a37;
        font-weight: 600;
    }
