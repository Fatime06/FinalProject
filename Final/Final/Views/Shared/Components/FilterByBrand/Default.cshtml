@using Service.ViewModels.Brand
@model IEnumerable<BrandVM>

<section class="filter-section">
    <h3 class="filter-title">Filter By Brands</h3>
    <hr class="filter-line">

    <ul class="brand-list">
        @foreach (var brand in Model)
        {
            <li class="filter-brand"
                data-brand="@brand.Id">
                @brand.Name
                <span>(@brand.Products.Count())</span>
            </li>
        }
    </ul>
   
</section>

<style>
    .brand-list li span {
        color: inherit;
    }

    .brand-list .filter-brand.active {
        color: #b02a37;
        font-weight: 600;
    }
