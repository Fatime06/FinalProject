@{
    decimal minPrice = ViewData["MinPrice"] != null
        ? (decimal)ViewData["MinPrice"]
        : 0;

    decimal maxPrice = ViewData["MaxPrice"] != null
        ? (decimal)ViewData["MaxPrice"]
        : 1000;

    decimal currentMax = Context.Request.Query["maxPrice"].Any()
        ? decimal.Parse(Context.Request.Query["maxPrice"])
        : maxPrice;
}



<section class="filter-section">
    <h3 class="filter-title">Filter By Price</h3>

    <div class="price-filter">
        <form method="get"
              asp-controller="Shop"
              asp-action="Index"
              class="price-filter-form">

            <input type="range"
                   id="priceRange"
                   name="maxPrice"
                   min="0"
                   max="@maxPrice"
                   value="@currentMax"
                   step="1" />

            <p class="price-range">
                Price: $@minPrice – $
                <span id="priceValue">@currentMax</span>
            </p>

            <button type="submit" class="apply-btn">Apply</button>
        </form>
    </div>
</section>


<script>
            document.addEventListener("DOMContentLoaded", function () {

        const range = document.getElementById("priceRange");
        const valueSpan = document.getElementById("priceValue");

        if (!range || !valueSpan) return;

        valueSpan.textContent = range.value;

        range.addEventListener("input", function () {
            console.log("test");
            valueSpan.textContent = this.value;
        });
    });

</script>




