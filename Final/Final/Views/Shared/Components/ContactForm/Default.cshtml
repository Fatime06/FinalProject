@using Service.ViewModels.ContactMessage
@model ContactMessageCreateVM

<section id="contact-form-section">
    <div class="contact-container">

        <div class="contact-form">
            <h2>Got Any Questions?</h2>
            <p>Use the form below to get in touch with the sales team</p>

            <form method="post" asp-action="SendMessage" asp-controller="Contact">
                @Html.AntiForgeryToken()
                <div class="form-row">
                    <div>
                        <input asp-for="Name" type="text" placeholder="Name *">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div>
                        <input asp-for="Email" type="email" placeholder="Email *">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <textarea asp-for="Message" placeholder="Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <button type="submit" class="send-btn">SEND YOUR MESSAGE</button>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </form>
        </div>

        <div class="contact-image">
            <img src="~/assets/img/Contact1.jpg" alt="">
        </div>

    </div>
</section>
