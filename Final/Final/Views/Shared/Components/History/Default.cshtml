@using Service.ViewModels.History
@model IEnumerable<HistoryVM>

<section id="history">
    <div class="history-bg">
        <img src="~/assets/img/Background1.jpeg" alt="">
    </div>

    <div class="history-content">
        <div class="text-side">
            <p class="story">THE LIQUORY’S STORY</p>
            <h2>HISTORY AND TRADITION OF<br>OUR COMPANY</h2>
            <p class="desc">
                At Liquory we connect customers, suppliers and drinks brands to offer
                you customized recommendations, as well as exclusive products, offers
                and services both in store & online.
            </p>
            <button class="discover-btn">DISCOVER MORE</button>
        </div>

        <div class="timeline">
            @foreach(var history in Model)
            {
                <div class="year-card">
                    <div class="year" data-year="@history.Year">0</div>
                    <h3>@history.Title</h3>
                    <p>@history.Text</p>
                </div>
            }
        </div>
    </div>
</section>

