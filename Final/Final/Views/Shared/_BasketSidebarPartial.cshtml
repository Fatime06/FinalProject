@using Service.ViewModels.Basket
@model BasketUIVM

<div id="basketMeta" data-count="@Model.TotalCount"></div>

@if (!Model.Items.Any())
{
    <p>No products in the cart.</p>
}
else
{
    foreach (var item in Model.Items)
    {
        <div class="cart-item">
            <img src="~/admin/uploads/products/@item.ProductImage" width="60">

            <div class="cart-info">
                <h5>@item.ProductName</h5>
                <span>@item.ProductCount x @item.ProductPrice ₼</span>
            </div>

            <button class="remove-item"
                    data-id="@item.ProductId">
                ✕
            </button>

        </div>
    }

    <div class="cart-footer">
        <strong>Total: @Model.TotalPrice ₼</strong>
    </div>
    <div class="checkout-area">
        <a asp-controller="Order"
           asp-action="Checkout"
           class="checkout-btn">
            Checkout
        </a>
    </div>
}

<style>
    .checkout-area {
        margin-top: 15px;
    }

    .checkout-btn {
        display: block;
        width: 100%;
        padding: 12px;
        background: #000;
        color: #fff;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
        border-radius: 6px;
    }

        .checkout-btn:hover {
            background: #333;
        }
</style>