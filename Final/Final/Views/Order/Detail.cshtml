@using Domain.Enums
@using Service.ViewModels.Order
@model OrderVM

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold">Order #@Model.Id</h2>

        <span class="badge
            @(Model.Status == OrderStatus.Delivered ? "bg-success" :
                                                                                    Model.Status == OrderStatus.Pending ? "bg-warning text-dark" :
                                                                                    "bg-danger")">
            @Model.Status
        </span>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="border rounded p-3 h-100">
                <h6 class="text-muted mb-3">Customer</h6>
                <p class="mb-1"><strong>@Model.Name @Model.Surname</strong></p>
            </div>
        </div>

        <div class="col-md-6">
            <div class="border rounded p-3 h-100">
                <h6 class="text-muted mb-3">Order Info</h6>
                <p class="mb-1"><strong>Date:</strong> @Model.CreatedDate.ToString("dd MMM yyyy")</p>
                <p class="mb-0"><strong>Total:</strong> @Model.TotalPrice ₼</p>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Products</h5>
        </div>

        <div class="card-body p-0">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th class="text-center">Quntity</th>
                                <th class="text-end">Price</th>
                                <th class="text-center">Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">@item.Price ₼</td>
                                    <td class="text-center">
                                        @if (item.CanRate)
                                        {
                                            <button class="btn btn-sm btn-outline-warning"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#ratingModal"
                                                    data-product-id="@item.ProductId"
                                                    data-order-id="@Model.Id">
                                                Rate
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="p-4 mb-0 text-muted">No products found.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="MyOrders" class="btn btn-outline-secondary">
            ← Back to Orders
        </a>
    </div>

</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = document.getElementById("ratingModal");

            modal.addEventListener("show.bs.modal", function (event) {
                const btn = event.relatedTarget;

                document.getElementById("ratingProductId").value =
                    btn.getAttribute("data-product-id");

                document.getElementById("ratingOrderId").value =
                    btn.getAttribute("data-order-id");
            });
        });
    </script>
}



<div class="modal fade" id="ratingModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form asp-controller="Order"
                  asp-action="Create"
                  method="post">

                <div class="modal-header">
                    <h5 class="modal-title">Rate product</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">

                    <input type="hidden" name="ProductId" id="ratingProductId" />
                    <input type="hidden" name="OrderId" id="ratingOrderId" />


                    <div class="mb-3">
                        <label class="form-label">Rating</label>
                        <select name="Value"
                                class="form-select"
                                required>
                            <option value="">Select</option>
                            <option value="1">⭐</option>
                            <option value="2">⭐⭐</option>
                            <option value="3">⭐⭐⭐</option>
                            <option value="4">⭐⭐⭐⭐</option>
                            <option value="5">⭐⭐⭐⭐⭐</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Comment</label>
                        <textarea name="Comment"
                                  class="form-control"
                                  rows="3"></textarea>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="submit"
                            class="btn btn-primary">
                        Submit
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>
