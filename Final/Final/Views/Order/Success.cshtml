@{
    ViewData["Title"] = "Order Success";
}

<link rel="stylesheet" href="~/assets/css/order-success.css" />

<section id="order-success">
    <div class="success-card">

        <div class="success-icon">
            ✓
        </div>

        <h2>Order Placed Successfully</h2>
        <p>
            Thank you for your order!
            Your purchase has been completed successfully.
        </p>

        <div class="success-actions">
            <a asp-controller="Shop" asp-action="Index" class="btn-outline">
                Continue Shopping
            </a>

            <a asp-controller="Order" asp-action="MyOrders" class="btn-solid">
                View My Orders
            </a>
        </div>

    </div>
</section>
