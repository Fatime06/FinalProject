@using Service.ViewModels.Account.User
@model UserRegisterVM

@{
    ViewData["Title"] = "Register";
}

<section class="auth-page">
    <div class="auth-box large">
        <h2>Register</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="double-input">
                <div class="form-group">
                    <label class="control-label" asp-for="UserName"></label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Enter username">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Surname"></label>
                <input asp-for="Surname" type="text" class="form-control" placeholder="Enter surname">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="double-input">
                <div class="form-group">
                    <label class="control-label" asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Enter confirm password">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
            </div>

            <div class="double-input">
                <div class="form-group">
                    <label class="control-label" asp-for="Birthday"></label>
                    <input asp-for="Birthday" type="date" class="form-control" placeholder="Enter birthday">
                    <span class="text-danger" asp-validation-for="Birthday"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender">Gender</label>
                    <select asp-for="Gender" class="form-control">
                        @foreach (var file in ViewBag.Genders)
                        {
                            <option value="@file">@file</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control" placeholder="Enter image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" placeholder="Enter address"></textarea>
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>

            <button type="submit" class="auth-btn">Register</button>

            <p class="auth-link">
                Already have an account?
                <a asp-action="login" asp-controller="account">Login</a>
                <div class="text-danger fs-4 mt-3" asp-validation-summary="ModelOnly"></div>
            </p>

        </form>
    </div>
</section>


<style>
    .auth-page {
        width: 100%;
        min-height: 100vh;
        background: #f9f6ef;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 100px 0 50px 0;
    }

    .auth-box {
        width: 400px;
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
    }

        .auth-box.large {
            width: 520px;
        }

        .auth-box h2 {
            text-align: center;
            margin-bottom: 25px;
        }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 6px;
        }

        .form-group input,
        .form-group textarea,
        .form-group select {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    .double-input {
        display: flex;
        gap: 12px;
    }

    .auth-btn {
        width: 100%;
        padding: 12px;
        background: #c00;
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: bold;
        margin-top: 10px;
        cursor: pointer;
    }

        .auth-btn:hover {
            background: darkred;
        }

    .auth-link {
        text-align: center;
        margin-top: 15px;
    }

    .text-danger {
        font-size: 16px !important;
    }
</style>