@using Service.ViewModels.Blog
@model BlogDetailVM

<section class="blog-detail-page">

    <div class="blog-detail-container">

        <div class="blog-image">
            <img src="~/admin/uploads/blogs/@Model.MainImage"
                 alt="@Model.Title" />
        </div>

        <h1 class="blog-title">@Model.Title</h1>

        <div class="blog-meta">
            <span>@Model.CreatedDate.ToString("MMMM dd, yyyy")</span>
            <span>•</span>
            <span>Liquory Blog</span>
        </div>

        @if (Model.Categories != null && Model.Categories.Any())
        {
            <div class="blog-section">
                <span class="section-label">Category:</span>
                @foreach (var c in Model.Categories)
                {
                    <span class="pill">@c.Name</span>
                }
            </div>
        }

        @if (Model.Tags != null && Model.Tags.Any())
        {
            <div class="blog-section">
                <span class="section-label">Tags:</span>
                @foreach (var tag in Model.Tags)
                {
                    <span class="pill">#@tag.Name</span>
                }
            </div>
        }

        <article class="blog-content">
            <span class="section-label">Description:</span>
            @Html.Raw(Model.Description)
        </article>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="comment-form">
                <h3>Leave a comment</h3>

                <form id="commentForm">
                    <input type="hidden" id="blogId" value="@Model.Id" />

                    <textarea id="commentText"
                          placeholder="Write your comment..."
                          rows="4"></textarea>

                    <button type="submit">Post Comment</button>
                </form>

                <div id="commentError"></div>
            </div>
        }
        else
        {
            <div class="comment-disabled">
                <p>You must <a href="/Account/Login">login</a> to write a comment.</p>
            </div>
        }


        <div id="commentsWrapper">
            @await Html.PartialAsync("_BlogCommentsPartial", Model.Comments)
        </div>


    </div>

</section>

@section Scripts {
    <script>
        document.addEventListener("click", function (e) {

            if (e.target.classList.contains("delete-btn")) {
                const id = e.target.dataset.id;
                const blogId = e.target.dataset.blog;

                fetch("/Blog/DeleteComment", {
                    method: "POST",
                    headers: { "Content-Type": "application/x-www-form-urlencoded" },
                    body: `id=${id}&blogId=${blogId}`
                })
                .then(res => res.text())
                .then(html => {
                    document.getElementById("commentsWrapper").innerHTML = html;
                });
            }

            if (e.target.classList.contains("edit-btn")) {
                const item = e.target.closest(".comment-item");
                const textEl = item.querySelector(".comment-text");
                const oldText = textEl.innerText;

                const newText = prompt("Edit comment:", oldText);
                if (!newText) return;

                fetch("/Blog/EditComment", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        commentId: item.dataset.id,
                        blogId: document.getElementById("blogId").value,
                        text: newText
                    })
                })
                .then(res => res.text())
                .then(html => {
                    document.getElementById("commentsWrapper").innerHTML = html;
                });
            }

        });

        document.addEventListener("DOMContentLoaded", function () {

            const form = document.getElementById("commentForm");
            if (!form) return;

            form.addEventListener("submit", function (e) {
                e.preventDefault();

                const blogId = document.getElementById("blogId").value;
                const text = document.getElementById("commentText").value.trim();
                const errorBox = document.getElementById("commentError");

                errorBox.innerHTML = "";

                if (text === "") {
                    errorBox.innerHTML = "<p style='color:red'>Comment cannot be empty</p>";
                    return;
                }
                        const formData = new URLSearchParams();
                 formData.append("BlogId", blogId);
                 formData.append("Text", text);

                 fetch("/Blog/AddComment", {
                     method: "POST",
                     headers: {
                         "Content-Type": "application/x-www-form-urlencoded"
                     },
                     body: formData.toString()
                 }).then(res => {
                    if (!res.ok)
                        return res.text().then(err => { throw err; });
                    return res.text();
                })
                .then(html => {
                    document.getElementById("commentsWrapper").innerHTML = html;
                    document.getElementById("commentText").value = "";
                })
                .catch(err => {
                    errorBox.innerHTML = `<p style="color:red">${err}</p>`;
                });
            });

        });
    </script>
}



