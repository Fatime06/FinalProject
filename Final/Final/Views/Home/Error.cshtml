@using Service.DTOs.CommonDtos

@model ErrorDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Error page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .container{
            padding-top: 60px;
        }
        .error-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .error-icon {
            font-size: 50px;
            color: #B22222!important;
        }
        .btn{
            background-color : #B22222;
            color:white;

        }
    </style>

</head>
<body>
    <div class="container">
        <div class="error-container bg-light p-4">
            <h1 class="error-icon">❌</h1>
            <h2>Error!</h2>
            <p>@Model.Message</p>

            <p><strong>Date:</strong> @Model.Timestamp</p>

            <a href="javascript:history.back()" class="btn">Return to previous page</a>
        </div>
    </div>

</body>
</html>
