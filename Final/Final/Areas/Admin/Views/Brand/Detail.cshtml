@using Service.ViewModels.Brand
@model BrandVM

<div class="container" style="margin-top:40px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <p><strong>Image:</strong> <img src="~/admin/uploads/brands/@Model.Image" class="img-responsive img-thumbnail" /></p>
            <p><strong>Created at:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>

            <a asp-controller="Brand" asp-action="Index" class="btn btn-secondary">Return to brands</a>
            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>
