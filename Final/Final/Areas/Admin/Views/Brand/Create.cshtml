@using Service.ViewModels.Brand
@model BrandCreateVM


<div class="container">
    <div class="row">
        <div>
            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="control-label" asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control" placeholder="Enter brand image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        padding-top: 30px;
    }
</style>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}





