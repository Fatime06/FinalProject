@using Service.ViewModels.Account.Admin
@model AdminLoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <title>Liquory Admin Login</title>
    <link rel="stylesheet" href="~/admin/assets/css/admin-login.css">
</head>
<body>

    <div class="admin-login-wrapper">

        <div class="login-box">
            <h2>Liquory Admin</h2>
            <p>Admin panel login</p>

            <form method="post">
                <div class="input-group">
                    <i class="fa-solid fa-envelope"></i>
                    <input asp-for="Email" placeholder="Admin Email">
                    <span class="loginError" class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="input-group">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Password" type="password" placeholder="Password">
                    <span class="loginError" class="text-danger" asp-validation-for="Password"></span>
                </div>

                <button type="submit">Sign in</button>

                <div class="loginError" asp-validation-summary="ModelOnly" class="error"></div>
            </form>
        </div>

    </div>

</body>
</html>
