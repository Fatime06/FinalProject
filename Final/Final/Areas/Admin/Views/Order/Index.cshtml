@using Domain.Entities
@using Domain.Enums
@using Service.ViewModels.Order
@model PaginatedList<OrderVM>

<h3>Orders</h3>
@{
    int count = 0;
}


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer number</th>
            <th>Customer</th>
            <th>Total</th>
            <th>Status</th>
            <th style="width:285px;">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerNumber</td>

                <td>@order.Name @order.Surname</td>

                <td><strong>@order.TotalPrice ₼</strong></td>

                <td>
                    @if (order.Status == OrderStatus.Pending)
                    {
                        <span class="label label-warning">Pending</span>
                    }
                    else if (order.Status == OrderStatus.Delivered)
                    {
                        <span class="label label-success">Delivered</span>
                    }
                    else
                    {
                        <span class="label label-danger">Cancelled</span>
                    }
                </td>

                <td>
                    <a class="btn btn-xs btn-info orderBtn"
                       asp-action="Detail"
                       asp-route-id="@order.Id">Detail</a>

                    <a class="btn btn-xs btn-primary orderBtn"
                       asp-action="Edit"
                       asp-route-id="@order.Id">Edit</a>

                    <a class="btn btn-xs btn-danger orderBtn"
                       asp-action="Delete"
                       asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <div class="pagination">

        @if (Model.HasPreviousPage)
        {
            <a asp-controller="Order"
               asp-action="Index"
               asp-route-page="@(Model.PageIndex - 1)"
               class="page prev">
                <i class="fa-solid fa-chevron-left"></i>
            </a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-controller="Order"
               asp-action="Index"
               asp-route-page="@i"
               class="page @(Model.PageIndex == i ? "active" : "")">
                @i
            </a>
        }

        @if (Model.HasNextPage)
        {
            <a asp-controller="Order"
               asp-action="Index"
               asp-route-page="@(Model.PageIndex + 1)"
               class="page next">
                <i class="fa-solid fa-chevron-right"></i>
            </a>
        }
    </div>

<style>
    .pagination {
        margin: 20px 0;
        text-align: center;
    }

        .pagination .page {
            display: inline-block;
            min-width: 36px;
            height: 36px;
            line-height: 34px;
            margin: 0 3px;
            padding: 0 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: #fff;
            color: #333;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .pagination .page:hover {
                background: #f5f5f5;
                border-color: #ccc;
                text-decoration: none;
            }

            .pagination .page.active {
                background: #337ab7;
                border-color: #2e6da4;
                color: #fff;
                cursor: default;
            }

            .pagination .page.prev,
            .pagination .page.next {
                padding: 0 14px;
                font-size: 13px;
            }

            .pagination .page.disabled {
                pointer-events: none;
                opacity: 0.5;
            }

            .pagination .page i {
                vertical-align: middle;
            }
    .orderBtn {
        width: 80px;
        height: 38px;
        font-size: 16px;
        padding-top: 5px;
    }
</style>