@using Domain.Entities
@using Service.ViewModels.Tag
@model PaginatedList<TagVM>


@{
    int count = 0;
}
<div class="container">
    <div class="row mb-3">
        <a asp-action="create" class="btn btn-outline-success">Add</a>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@(++count)</td>
                        <td>@tag.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-action="edit" asp-route-id="@tag.Id">Edit</a>
                            <a class="btn btn-info" asp-action="detail" asp-route-id="@tag.Id">Detail</a>
                            <a class="btn btn-danger" asp-action="delete" asp-route-id="@tag.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagination">

            @if (Model.HasPreviousPage)
            {
                <a asp-controller="Tag"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex - 1)"
                   class="page prev">
                    <i class="fa-solid fa-chevron-left"></i>
                </a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a asp-controller="Tag"
                   asp-action="Index"
                   asp-route-page="@i"
                   class="page @(Model.PageIndex == i ? "active" : "")">
                    @i
                </a>
            }

            @if (Model.HasNextPage)
            {
                <a asp-controller="Tag"
                   asp-action="Index"
                   asp-route-page="@(Model.PageIndex + 1)"
                   class="page next">
                    <i class="fa-solid fa-chevron-right"></i>
                </a>
            }
        </div>
    </div>
</div>

<style>
    .pagination {
        margin: 20px 0;
        text-align: center;
    }

        .pagination .page {
            display: inline-block;
            min-width: 36px;
            height: 36px;
            line-height: 34px;
            margin: 0 3px;
            padding: 0 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background: #fff;
            color: #333;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.2s ease;
        }

            .pagination .page:hover {
                background: #f5f5f5;
                border-color: #ccc;
                text-decoration: none;
            }

            .pagination .page.active {
                background: #337ab7;
                border-color: #2e6da4;
                color: #fff;
                cursor: default;
            }

            .pagination .page.prev,
            .pagination .page.next {
                padding: 0 14px;
                font-size: 13px;
            }

            .pagination .page.disabled {
                pointer-events: none;
                opacity: 0.5;
            }

            .pagination .page i {
                vertical-align: middle;
            }
    .toast-success {
        background-color: #28a745 !important;
        color: white !important;
        font-weight: bold;
    }

    .container {
        padding-top: 30px;
    }
</style>
@section scripts {
    <script>
        $(document).ready(function () {
            var successMessage = '@TempData["SuccessMessage"]';
            if (successMessage && successMessage !== "") {
                toastr.options = {
                    "closeButton": true,
                    "progressBar": true,
                    "positionClass": "toast-top-right",
                    "timeOut": "3000",
                    "extendedTimeOut": "1000",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut"
                };

                toastr.success(successMessage);
            }
        });
    </script>
}
