@using Service.ViewModels.Product
@model ProductUpdateVM

<div class="container">
    <div class="row">
        <div>

            <form method="post" enctype="multipart/form-data" class="form-horizontal">

                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <span class="featured">Featured product</span>
                            <input asp-for="IsFeatured" type="checkbox" />
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="DiscountPrice"></label>
                    <input asp-for="DiscountPrice" class="form-control" />
                    <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Current Image:</label>
                    <br />
                    <img src="admin/uploads/products/@Model.Image" alt=""/>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Image"></label>
                    <input asp-for="Image" type="file" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BrandId">Brand</label>
                    <select asp-for="BrandId" class="form-control">
                        @foreach (var file in ViewBag.Brands)
                        {
                            <option value="@file.Id">@file.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var file in ViewBag.Categories)
                        {
                            <option value="@file.Id">@file.Name</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Save changes</button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationPartial")
}
