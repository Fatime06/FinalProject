@using Service.ViewModels.Product
@model ProductCreateVM


<div class="container">
    <div class="row">
        <div>
            <form method="post" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="control-label" asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter product name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Price"></label>
                    <input asp-for="Price" type="text" class="form-control" placeholder="Enter product price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Quantity"></label>
                    <input asp-for="Quantity" type="text" class="form-control" placeholder="Enter product quantity">
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="DiscountPrice"></label>
                    <input asp-for="DiscountPrice" type="text" class="form-control" placeholder="Enter product discount price">
                    <span class="text-danger" asp-validation-for="DiscountPrice"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control" placeholder="Enter product image">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select name="CategoryId" class="form-control">
                        @foreach (var file in ViewBag.Categories)
                        {
                            <option value="@file.Id">@file.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>

<style>
    .container {
        padding-top: 30px;
    }
</style>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}



