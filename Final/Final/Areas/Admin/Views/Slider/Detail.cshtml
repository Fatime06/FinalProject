@using Service.ViewModels.Slider
@model SliderVM

<div class="container" style="margin-top:40px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <p><strong>Image:</strong> <img src="~/admin/uploads/sliders/@Model.Image" class="img-responsive img-thumbnail" /></p>
            <p><strong>Small Text:</strong> @Model.SmallText</p>
            <p><strong>Big Text:</strong> @Model.BigText</p>
            <p><strong>Medium Text:</strong> @Model.MediumText</p>
            <p><strong>Button Text:</strong> @Model.ButtonText</p>
            <p><strong>Small Note:</strong> @Model.SmallNote</p>
            <p><strong>Created at:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>

            <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary">Return to sliders</a>
            <a asp-controller="Slider" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>