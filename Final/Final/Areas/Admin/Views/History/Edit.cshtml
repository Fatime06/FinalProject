@using Service.ViewModels.History
@model HistoryUpdateVM


<div class="container">
    <div class="row">
        <div>
            <form method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="control-label" asp-for="Year"></label>
                    <input asp-for="Year" type="number" class="form-control" placeholder="Enter year">
                    <span class="text-danger" asp-validation-for="Year"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="Enter title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="Text"></label>
                    <input asp-for="Text" type="text" class="form-control" placeholder="Enter text">
                    <span class="text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .container {
        padding-top: 30px;
    }
</style>

@section scripts {
    @await Html.PartialAsync("_ValidationPartial")
}




