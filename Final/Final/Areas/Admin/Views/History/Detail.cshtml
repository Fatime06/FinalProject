@using Service.ViewModels.History
@model HistoryVM

<div class="container" style="margin-top:40px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <p><strong>Year:</strong> @Model.Year</p>
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Text:</strong> @Model.Text</p>
            <p><strong>Created at:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>

            <a asp-controller="History" asp-action="Index" class="btn btn-secondary">Return to histories</a>
            <a asp-controller="History" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        </div>
    </div>
</div>